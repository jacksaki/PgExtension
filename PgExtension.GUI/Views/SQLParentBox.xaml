<UserControl
    x:Class="PgExtension.GUI.Views.SQLParentBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mahApps="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:PgExtension.GUI.Views"
    xmlns:vm="clr-namespace:PgExtension.GUI.ViewModels"
    xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ToolBar>
            <Button
                Margin="0,0,6,0"
                Command="{Binding AddCommand}"
                Content="{wpf:PackIcon Kind=Add}"
                Style="{StaticResource MaterialDesignRaisedLightButton}" />
            <Button
                Margin="0,0,6,0"
                Command="{Binding RemoveSelectedCommand}"
                Content="{wpf:PackIcon Kind=Trash}"
                Style="{StaticResource MaterialDesignRaisedLightButton}" />
        </ToolBar>
        <TabControl
            Grid.Row="1"
            HorizontalContentAlignment="Left"
            wpf:ColorZoneAssist.Mode="PrimaryLight"
            ItemsSource="{Binding SQL}"
            SelectedItem="{Binding SelectedSQL.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource MaterialDesignFilledTabControl}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title.Value, Mode=OneWay}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <v:SQLBox DataContext="{Binding}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>
